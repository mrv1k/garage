{
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/.cache/*",
    "**/public",
    "**/cypress"
  ],
  "include": [
    "./src/",
    ".eslintrc.js",
    "**/gatsby/**/*",
    "**/src/**/*",
    "**/__mocks__/**/*",
    "**/test/**/*",
    "**/index.ts",
    "car/graphql-codegen-types.ts"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "incremental": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    // 4.4
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true
    }
}
